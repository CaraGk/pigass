{% extends 'MopaBootstrapBundle::base_initializr.html.twig' %}

{% block head_style %}
    {% stylesheets filter="cssrewrite,less"
        '@MopaBootstrapBundle/Resources/public/less/mopabootstrapbundle-fa.less'
        '@PigassCoreBundle/Resources/public/less/main.less'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
    {% if diagnostic_mode %}
        <link href="{{ asset('bundles/mopabootstrap/css/diagnostic.css') }}" type="text/css" rel="stylesheet" media="screen" />
    {% endif %}
{% endblock head_style %}

{% block title %}Adh√©sions{% endblock title %}

{% block favicon %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
{% endblock favicon %}

{% block head_bottom %}
    <meta name="application-name" content="PIGASS" />
{% endblock head_bottom %}

{% block body_tag %}
    <body>
{% endblock body_tag %}

{% block container_div_start %}
    <div class="container-fluid">
{% endblock container_div_start %}

{% block navbar %}
{% endblock navbar %}

{% block page_header %}
<header id="header" class="row">
    <span class="hidden-xs col-sm-1">
        {% block logo %}{% endblock logo %}
    </span>
    <h1 class="col-sm-4">{% block headline %}{% endblock headline %}</h1>
    <aside id="menu" class="col-sm-7">
        {% block nav %}
        {% endblock nav %}
    </aside>
</header>
{% endblock page_header %}

{% block flashes %}{{ parent() }}{% endblock flashes %}

{% block content_row %}
<div class="row">
    <aside id="submenu" class="col-sm-2">
        <ul class="btn-group-vertical">
            {% block action %}{% endblock action %}
        </ul>
    </aside>
    <section id="content" class="col-sm-10 col-xs-12">
        <div class="content">
            {% block content %}{% endblock content %}
        </div>
    </section>
</div>
{% endblock %}

{% block footer_tag_start %}
<footer id="footer" class="row">
{% endblock footer_tag_start %}

{% block footer %}
<ul class="col-sm-6 col-xs-12 text-center">
    <li><a href="https://github.com/CaraGk/pigass/issues">Reporter un bug ou un souhait</a></li>
</ul>
<div class="miniature col-sm-6 col-xs-12">
    <a href="https://github.com/CaraGk/pigass"><img src="{{ asset('pigass_small.png') }}" alt="pigass" /></a> powered by <a href="http://symfony.com/"><img src="{{ asset('symfony_logo.png') }}" alt="symfony 2" /></a>
</div>
{% endblock footer %}

{% block foot_script_assetic %}
    {{ parent() }}
    {% block javascripts %}
        {% javascripts
            '@PigassCoreBundle/Resources/public/js/*.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock javascripts %}
{% endblock foot_script_assetic %}
