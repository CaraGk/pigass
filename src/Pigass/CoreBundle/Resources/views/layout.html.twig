{% extends '::base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block nav %}
            {{ mopa_bootstrap_menu('main', {'automenu': 'navbar'}) }}
{% endblock %}

{% block logo %}
    {% image '@PigassCoreBundle/Resources/public/images/pigass_medium.png' %}
        <a href="{{ path('core_structure_index') }}"><img src="{{ asset_url }}" alt="logo" /></a>
    {% endimage %}
{% endblock logo %}

{% block head_style %}
    {{ parent() }}
    <style type="text/css">
        body,
        .container-fluid,
        #content
        {
            background-image: url({{ asset('uploads/background.png') }});
            background-repeat: repeat-x;
            background-attachment: fixed;
        }
        .mapael .map {
            background-color: #FFF;
            border: 1px solid #AAA;
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block headline %}{% endblock %}

{% block action %}{% endblock %}

{% block content %}{% endblock %}

{% block javascripts %}{{ parent() }}{% endblock %}
