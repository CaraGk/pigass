{% extends 'layout.html.twig' %}

{% block headline %}Ajouter/modifier un formulaire d'évaluation{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body list-group list-group-flush">
            {{ form_start(form) }}
            <div class="list-group-item">
                {{ form_row(form.name) }}
            </div>
            <div class="list-group-item card">
                <div class="card-header text-center bg-primary text-white">Agréments</div>
                <div class="card-body list-group list-group-flush">
                    {% for sector in form.sectors %}
                        <div class="list-group-item">
                            {{ form_widget(sector) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Ajouter</button>
                </div>
            </div>
            <div class="list-group-item card">
                <div class="card-header text-center bg-primary text-white">Questions du formulaire</div>
                <div class="card-body list-group list-group-flush">
                    {% for criteria in form.criterias %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between">
                                <div class="">{{ form_row(criteria.rank) }}</div>
                                <div class="">{{ form_row(criteria.name) }}</div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="">{{ form_row(criteria.type) }}</div>
                                <div class="">{{ form_row(criteria.more) }}</div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="">{{ form_widget(criteria.required) }}</div>
                                <div class="">{{ form_widget(criteria.moderate) }}</div>
                                <div class="">{{ form_widget(criteria.private) }}</div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="card-footer text-center">
                    <button class="btn btn-success btn-sm"><i class="fas fa-plus"></i> Ajouter</button>
                </div>
            </div>
            <div class="list-group-item text-center">
                <button class="btn btn-primary btn-sm" type="submit">Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/gessehcore/js/addSub.js') }}" type="text/javascript"></script>
{% endblock %}

