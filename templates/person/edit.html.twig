{% extends 'layout.html.twig' %}

{% block title %}
    {{ parent() }} - Étudiants :
    {% if person is not null %}
        modifier {{ person }}
    {% else %}
        ajouter
    {% endif %}
{% endblock %}

{% block headline %}
    {% if person is not null %}
        Modifier : {{ person }}
    {% else %}
        Ajouter un étudiant
    {% endif %}
{% endblock %}

{% block action %}
    <li class="field"><a href="{{ path('user_person_index') }}?{{ app.request.querystring }}" title="Retour à la liste des internes"><img src="{{ asset('bundles/pigasscore/images/Button_Back.png') }}" alt="Retour"></a></li>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        {{ form(person_form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/pigasscore/js/actions.js') }}" type="text/javascript"></script>
{% endblock %}
